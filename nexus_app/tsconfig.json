{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],

    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "useDefineForClassFields": false,

    "jsx": "react-jsx",

    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,

    "types": ["node"],

    "paths": {
      "@/*": ["./*"]
    },

    "allowImportingTsExtensions": true
  }
}